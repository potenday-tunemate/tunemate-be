<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tunemate.be.domain.artist.domain.artist.ArtistMapper">
    <resultMap id="ArtistResultMap" type="com.tunemate.be.domain.artist.domain.artist.Artist">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="img" column="img"/>
        <result property="bornYear" column="born_year"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="ArtistResultMap">
        SELECT *
        FROM artist
        WHERE id = #{id}
    </select>
    <insert id="create" parameterType="com.tunemate.be.domain.artist.domain.artist.Artist" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO artist (name, img, born_year)
        VALUES (#{name}, #{img}, #{bornYear})
    </insert>
</mapper>
